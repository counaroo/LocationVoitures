<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="459.0" prefWidth="767.0" spacing="10" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.couro.sadio.locationvoitures.controller.clientController.MesFacturesController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Mes Factures" />

    <TableView fx:id="factureTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="colId" prefWidth="100" text="ID Facture" />
            <TableColumn fx:id="colMontant" prefWidth="150" text="Montant (FCFA)" />
            <TableColumn fx:id="colReservation" prefWidth="150" text="Réservation ID" />
            <TableColumn fx:id="colStatut" prefWidth="173.60003662109375" text="Statut Réservation" />
         <TableColumn fx:id="colDate" prefWidth="150.39996337890625" text="Date facture" />
        </columns>
    </TableView>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="55.0">
      <children>
         <Button mnemonicParsing="false" onAction="#payerFacture" prefHeight="26.0" prefWidth="85.0" text="Payer" />
         <Button mnemonicParsing="false" onAction="#annulerFacture" prefHeight="26.0" prefWidth="86.0" text="Annuler" />
      </children>
   </HBox>
</VBox>
