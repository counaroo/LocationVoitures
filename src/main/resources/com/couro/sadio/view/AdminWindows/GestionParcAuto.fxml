<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="889.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.couro.sadio.locationvoitures.controller.adminControllers.GestionParcAutoController">
    <children>
        <!-- Titre principal -->
        <Label contentDisplay="CENTER" layoutX="297.0" layoutY="28.0" prefHeight="35.0" prefWidth="293.0" text="Gestion Parc automobile" textAlignment="CENTER" textFill="#9ca2b0">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Section Formulaire -->
        <VBox layoutX="30.0" layoutY="80.0" prefHeight="200.0" prefWidth="320.0" spacing="10.0">
            <children>
                <Label text="Informations du véhicule" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <!-- Marque -->
                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="80.0" text="Marque:" />
                        <TextField fx:id="marqueField" prefWidth="200.0" />
                    </children>
                </HBox>

                <!-- Modèle -->
                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="80.0" text="Modèle:" />
                        <TextField fx:id="modeleField" prefWidth="200.0" />
                    </children>
                </HBox>

                <!-- Tarif -->
                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="80.0" text="Tarif:" />
                        <TextField fx:id="tarifField" prefWidth="200.0" />
                    </children>
                </HBox>

                <!-- Immatriculation -->
                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="80.0" text="Immatriculation:" />
                        <TextField fx:id="immatriculationField" prefWidth="200.0" />
                    </children>
                </HBox>

                <!-- Disponibilité -->
                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="80.0" text="Disponible:" />
                        <CheckBox fx:id="dispoCheckBox" selected="true" />
                    </children>
                </HBox>

                <!-- Boutons d'action -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button fx:id="ajouterBtn" onAction="#ajouterVehicule" prefWidth="80.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Ajouter" />
                        <Button fx:id="modifierBtn" onAction="#modifierVehicule" prefWidth="80.0" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Modifier" />
                        <Button fx:id="annulerBtn" onAction="#annulerAction" prefWidth="80.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Annuler" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Section TableView -->
        <VBox layoutX="370.0" layoutY="80.0" prefHeight="480.0" prefWidth="500.0" spacing="10.0">
            <children>
                <Label text="Liste des véhicules" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <!-- Barre de recherche -->
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="rechercheField" prefWidth="350.0" promptText="Rechercher par marque, modèle ou immatriculation..." />
                        <Button fx:id="rechercherBtn" onAction="#rechercherVehicule" prefHeight="26.0" prefWidth="107.0" text="Rechercher" />
                        <Button fx:id="actualiserBtn" onAction="#actualiserListe" prefHeight="26.0" prefWidth="102.0" text="Actualiser" />
                    </children>
                </HBox>

                <!-- Tableau des véhicules -->
                <TableView fx:id="vehiculesTable" prefHeight="380.0" prefWidth="500.0">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="40.79998779296875" text="ID" />
                        <TableColumn fx:id="marqueColumn" prefWidth="89.60003662109375" text="Marque" />
                        <TableColumn fx:id="modeleColumn" prefWidth="80.0" text="Modèle" />
                        <TableColumn fx:id="tarifColumn" prefWidth="89.5999755859375" text="Tarif" />
                        <TableColumn fx:id="immatriculationColumn" prefWidth="112.7999267578125" text="Immatriculation" />
                        <TableColumn fx:id="dispoColumn" prefWidth="87.2000732421875" text="Disponible" />
                    </columns>
                </TableView>

                <!-- Boutons d'action sur la sélection -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button fx:id="supprimerBtn" onAction="#supprimerVehicule" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Supprimer" />
                        <Button fx:id="modifierSelectionBtn" onAction="#modifierSelection" prefHeight="26.0" prefWidth="121.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Modifier sélection" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Zone de statut -->
        <Label fx:id="statusLabel" layoutX="30.0" layoutY="560.0" prefHeight="20.0" prefWidth="800.0" text="Prêt" textFill="#7f8c8d">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
