<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="854.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.couro.sadio.locationvoitures.controller.adminControllers.GestionClientController">
   <children>
      <!-- Header -->
      <Label contentDisplay="CENTER" layoutX="320.0" layoutY="15.0" text="Gestion des Clients" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>

      <!-- Section de recherche -->
      <HBox layoutX="20.0" layoutY="55.0" spacing="15.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label text="Rechercher par nom/prénom:" />
                  <TextField fx:id="txtRecherche" prefWidth="250.0" promptText="Saisir nom ou prénom..." />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="" />
                  <Button fx:id="btnRechercher" onAction="#rechercherClient" prefWidth="100.0" text="Rechercher" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="" />
                  <Button fx:id="btnReset" onAction="#resetFilters" prefWidth="100.0" text="Réinitialiser" />
               </children>
            </VBox>
         </children>
      </HBox>

      <!-- Boutons d'actions principales -->
      <HBox layoutX="20.0" layoutY="125.0" spacing="10.0">
         <children>
            <Button fx:id="btnAjouter" onAction="#ajouterClient" prefWidth="120.0" style="-fx-background-color: #3c8fb2; -fx-text-fill: white;" text="Ajouter Client" />
            <Button fx:id="btnModifier" disable="true" onAction="#modifierClient" prefWidth="100.0" text="Modifier" />
            <Button fx:id="btnSupprimer" disable="true" onAction="#supprimerClient" prefWidth="100.0" style="-fx-background-color: #ff5d5d; -fx-text-fill: white;" text="Supprimer" />
            <Button fx:id="btnActualiser" onAction="#actualiserListe" prefWidth="100.0" text="Actualiser" />
         </children>
      </HBox>

      <!-- Tableau des clients -->
      <TableView fx:id="tableClients" layoutX="20.0" layoutY="165.0" prefHeight="280.0" prefWidth="814.0">
         <columns>
            <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="colNom" prefWidth="130.0" text="Nom" />
            <TableColumn fx:id="colPrenom" prefWidth="130.0" text="Prénom" />
            <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="colTelephone" prefWidth="120.0" text="Téléphone" />
            <TableColumn fx:id="colAdresse" prefWidth="184.0" text="Adresse" />
         </columns>
      </TableView>

      <!-- Statistiques -->
      <HBox layoutX="20.0" layoutY="465.0" spacing="50.0">
         <children>
            <VBox spacing="3.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Statistiques générales:" />
                  <Label fx:id="lblTotalClients" text="Total clients: 0" />
                  <Label fx:id="lblClientsActifs" text="Clients actifs: 0" />
               </children>
            </VBox>
            <VBox spacing="3.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Points de fidélité:" />
                  <Label fx:id="lblPointsMoyens" text="Points moyens: 0" />
                  <Label fx:id="lblPointsTotal" text="Points total: 0" />
               </children>
            </VBox>
            <VBox spacing="3.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Actions rapides:" />
                  <Button fx:id="btnTopClients" onAction="#afficherTopClients" prefWidth="100.0" text="Top Clients" />
                  <Button fx:id="btnGererFidelite" onAction="#gererPointsFidelite" prefWidth="100.0" text="Gérer Fidélité" />
               </children>
            </VBox>
         </children>
      </HBox>

      <!-- Barre de statut - AJOUTÉ -->
      <HBox layoutX="20.0" layoutY="555.0" spacing="20.0" style="-fx-background-color: #f5f5f5; -fx-padding: 5px;">
         <children>
            <Label fx:id="lblStatut" style="-fx-font-weight: bold;" text="Prêt" />
            <Label fx:id="lblDerniereMaj" text="Dernière mise à jour: --:--:--" />
         </children>
      </HBox>

   </children>
</AnchorPane>
